<Window x:Class="CRM.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM.Windows"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="20">
            <Button Height="200" Width="150" Margin="0,0,0,0"  Background="BlueViolet" Content="Kontrahenci" Foreground="White" FontSize="20" FontWeight="Bold" Click="btn_Contractors"></Button>
            <Button Height="200" Width="150" Margin="10,0,0,0"  Background="BlueViolet" Content="Zadania" Foreground="White" FontSize="20" FontWeight="Bold" Click="btn_Tasks"></Button>
            <Button Height="200" Width="150" Margin="10,0,0,0"  Background="BlueViolet" Content="Pracownicy" Foreground="White" FontSize="20" FontWeight="Bold" Click="btn_Users"></Button>
            <Button Height="200" Width="150" Margin="10,0,0,0"  Background="MediumVioletRed" Content="Wyloguj" Foreground="White" FontSize="20" FontWeight="Bold" Click="btn_Logout"></Button>
        </StackPanel>
    </Grid>
</Window>
